# MNIST Neural Network - Environment Configuration
# Copy this file to .env and modify as needed

# Flask debug mode (set to 'false' for production)
FLASK_DEBUG=false

# Server host and port
HOST=0.0.0.0
PORT=5000

# CORS allowed origins (comma-separated list or '*' for all)
# Examples:
#   ALLOWED_ORIGINS=*
#   ALLOWED_ORIGINS=http://localhost:3000
#   ALLOWED_ORIGINS=https://example.com,https://app.example.com
ALLOWED_ORIGINS=*

# Maximum request size in bytes (default: 16MB)
MAX_CONTENT_LENGTH=16777216

# Path to the data directory containing CSV files
# Leave empty to use the application directory
DATA_DIR=

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Rate limiting (set to 'false' to disable)
RATE_LIMIT_ENABLED=true
